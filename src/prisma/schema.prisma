generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid()) @map("_id")
  name     String
  email    String @unique
  password String
  role     Role
}

model Client {
  id     String   @id @default(uuid()) @map("_id")
  name   String
  email  String   @unique
  role   Role     @default(USER)
  policy Policy[]
}

model Policy {
  id                 String  @id @default(uuid()) @map("_id")
  amountInsured      Int
  email              String
  inceptionDate      String
  installmentPayment Boolean

  client   Client @relation(fields: [clientId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  clientId String
}

enum Role {
  ADMIN
  USER
}
